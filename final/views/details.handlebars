{{!-- ---------------          THE MAIN SHOW               --------------- --}}
<h2>{{current_car.name}}</h2>
<div class="container">
    <img src="{{current_car.image}}" alt="">
</div>
<h4>starting at ${{formatPrice current_car.price}}</h4>
<h3>{{current_car.description}}</h3>

<div class="container">
    {{#each current_car.details}}
        <p>{{this}}</p>
    {{/each}}
</div>





{{!----------------        LEFT  SIDE WINDOW POP UP     ------------------}}
<div class="offcanvas offcanvas-start show" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasLabel">Offcanvas LEFT</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="carousel-inner col-md-9">
        {{#each sixRandomCars}}
        <div class="carousel-item {{#if @first}}active{{/if}}" style="text-align: center;">
            {{!-- de cardooooo --}}
            <div class="card" style="width: 18rem;">
                <img src="{{this.image}}" class="card-img-top" alt="...">
                {{!-- <img src="{{this.image}}" class="img-fluid col-md-5" style="max-height: 300px; object-fit: contain;"> --}}
                <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <h5> o o o o oop</h5>
                <p class="card-text">{{this.price}}.</p>
                <a href="/{{this.category}}/details/{{this.id}}" class="btn btn-primary">View</a>
            </div>
            </div>
        </div>
        {{/each}}
    </div>
  </div>
    <div>
        Content for the offcanvas goes here. You can place just about any Bootstrap component or custom elements here.
    </div>
</div>






{{!---------------- gallery for other car photos-----------------}}
<div id="galleryCarousel" style="background-color:rgb(32, 39, 37);" class="carousel slide col-md-5" data-bs-ride="carousel">
    <div class="carousel-inner col-md-9">
        {{#each current_car.gallery}}
        <div class="carousel-item {{#if @first}}active{{/if}}" style="text-align: center;">
            <img src="{{this}}" class="img-fluid col-md-5" style="max-height: 300px; object-fit: contain;">
        </div>
        {{/each}}
    </div>

    <!-- Left Control -->
    <button class="carousel-control-next" type="button" data-bs-target="#galleryCarousel" data-bs-slide="prev">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>

    <!-- Right Control -->
    <button class="carousel-control-prev" type="button" data-bs-target="#galleryCarousel" data-bs-slide="next">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


