{{!-- RIGHT SIDE CART CHECK OUT PAGE                 SHOPPING CART--}}
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasRightLabel">Offcanvas right</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <a href="/checkout" class="btn btn-primary">Check Out</a>
        <div class="container">
            <h5>Total: ${{formatPrice total_price}}</h5>
        </div>
        {{#each shopping_cart}}
        <div class="col-6 col-md-4 col-lg-3 mb-3">
            <div class="card border-0 shadow-sm">
                <img class="card-img-top img-fluid" src="{{this.image}}" alt="{{this.name}}">
                <div class="card-body text-left">   
                    <a href="/{{this.category}}/details/{{this.id}}"><p class="card-title" style="font-weight: bold;">{{this.name}}</p></a>        
                </div>
                <div class="card-body text-end">
                    <p class="card-text" style="font-size: 0.77rem; color: #504f4f;">${{formatPrice this.price}}</p>
                </div>
            </div>
            <hr>
        </div>
