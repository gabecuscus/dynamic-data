<div class="container mt-5">
  <h1 class="mb-4">{{current_car.name}}</h1>
  
  <div class="row">
    <div class="col-md-6 mb-4">
      <img src="{{current_car.image}}" alt="{{current_car.name}}" class="img-fluid rounded shadow">
    </div>
    
    <div class="col-md-6">
      <h2 class="text-primary mb-3">Starting at ${{formatPrice current_car.price}}</h2>
      <p class="lead mb-4">{{current_car.description}}</p>
      
      <div class="bg-light p-3 rounded mb-4">
        {{#each current_car.details}}
          <p><i class="bi bi-check-circle-fill text-success me-2"></i>{{this}}</p>
        {{/each}}
      </div>
      
      <div class="d-grid gap-2">
        {{>addcart}}

        {{!--  View Cart Button--------------------}}
        
            {{>viewCartButton}}

        {{!------------------View Cart Button-------}}

      </div>
    </div>
  </div>

  <h3 class="mt-5 mb-4">Gallery</h3>
  <div id="carGallery" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
      {{#each current_car.gallery}}
        <div class="carousel-item {{#if @first}}active{{/if}}">
          <img src="{{this}}" class="d-block w-100 rounded" alt="Gallery image">
        </div>
      {{/each}}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carGallery" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carGallery" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <h3 class="mb-4">Recommended for You</h3>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    {{#each sixRandomCars}}
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">${{formatPrice this.price}}</p>
            <a href="/{{this.category}}/details/{{this.id}}" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

